{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": false,
    "target": "es2022",
    "rootDir": ".",
    "removeComments": true,
    "isolatedModules": true,
    "module": "commonjs",
    "sourceMap": true,
    "types": ["node", "jsdom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": ["components/*"]
    }
  }
}
